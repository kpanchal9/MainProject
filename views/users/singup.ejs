<script>
    // DOM Elements
    const signupForm = document.getElementById('signupForm');
    const usernameInput = document.getElementById('username');
    const emailInput = document.getElementById('email');
    const passwordInput = document.getElementById('password');
    const passwordToggle = document.getElementById('passwordToggle');
    const signupBtn = document.getElementById('signupBtn');
    const errorMessage = document.getElementById('errorMessage');
    const errorText = document.getElementById('errorText');
    const stackedInputs = document.getElementById('stackedInputs');
    
    // Password strength elements
    const passwordStrength = document.getElementById('passwordStrength');
    const strengthFill = document.getElementById('strengthFill');
    const strengthValue = document.getElementById('strengthValue');

    // Password visibility toggle
    passwordToggle.addEventListener('click', function() {
        const type = passwordInput.getAttribute('type');
        
        if (type === 'password') {
            passwordInput.setAttribute('type', 'text');
            this.textContent = 'Hide';
        } else {
            passwordInput.setAttribute('type', 'password');
            this.textContent = 'Show';
        }
        
        passwordInput.focus();
    });

    // Username validation
    usernameInput.addEventListener('input', function() {
        const wrapper = document.getElementById('usernameWrapper');
        const icon = document.getElementById('usernameIcon');
        const value = this.value.trim();
        
        wrapper.classList.remove('error', 'success');
        icon.classList.remove('success', 'error');
        icon.className = 'fa-solid fa-check input-icon';
        
        if (value.length >= 3) {
            wrapper.classList.add('success');
            icon.classList.add('success');
        }
        
        hideError();
    });

    // Email validation
    emailInput.addEventListener('input', function() {
        const wrapper = document.getElementById('emailWrapper');
        const icon = document.getElementById('emailIcon');
        const value = this.value.trim();
        const isValid = /^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(value);
        
        wrapper.classList.remove('error', 'success');
        icon.classList.remove('success', 'error');
        icon.className = 'fa-solid fa-check input-icon';
        
        if (isValid) {
            wrapper.classList.add('success');
            icon.classList.add('success');
        }
        
        hideError();
    });

    // Password strength checker
    passwordInput.addEventListener('input', function() {
        const password = this.value;
        
        if (password.length > 0) {
            passwordStrength.classList.add('show');
            
            const hasLength = password.length >= 8;
            const hasUppercase = /[A-Z]/.test(password);
            const hasLowercase = /[a-z]/.test(password);
            const hasNumber = /[0-9]/.test(password);
            
            updateRequirement('req-length', hasLength);
            updateRequirement('req-uppercase', hasUppercase);
            updateRequirement('req-lowercase', hasLowercase);
            updateRequirement('req-number', hasNumber);
            
            let strength = 0;
            if (hasLength) strength++;
            if (hasUppercase) strength++;
            if (hasLowercase) strength++;
            if (hasNumber) strength++;
            
            strengthFill.className = 'strength-fill';
            strengthValue.className = 'strength-value';
            
            if (strength <= 1) {
                strengthFill.classList.add('weak');
                strengthValue.classList.add('weak');
                strengthValue.textContent = 'Weak';
            } else if (strength <= 2) {
                strengthFill.classList.add('medium');
                strengthValue.classList.add('medium');
                strengthValue.textContent = 'Medium';
            } else if (strength <= 3) {
                strengthFill.classList.add('medium');
                strengthValue.classList.add('medium');
                strengthValue.textContent = 'Good';
            } else {
                strengthFill.classList.add('strong');
                strengthValue.classList.add('strong');
                strengthValue.textContent = 'Strong';
            }
        } else {
            passwordStrength.classList.remove('show');
        }
        
        hideError();
    });

    function updateRequirement(id, isMet) {
        const element = document.getElementById(id);
        if (isMet) {
            element.classList.add('met');
        } else {
            element.classList.remove('met');
        }
    }

    // Form submission
    signupForm.addEventListener('submit', function(e) {
        let isValid = true;
        let firstError = '';
        
        const username = usernameInput.value.trim();
        if (!username || username.length < 3) {
            document.getElementById('usernameWrapper').classList.add('error');
            firstError = firstError || 'Username must be at least 3 characters';
            isValid = false;
        }
        
        const email = emailInput.value.trim();
        if (!email || !/^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(email)) {
            document.getElementById('emailWrapper').classList.add('error');
            firstError = firstError || 'Please enter a valid email';
            isValid = false;
        }
        
        const password = passwordInput.value;
        if (!password || password.length < 8) {
            document.getElementById('passwordWrapper').classList.add('error');
            firstError = firstError || 'Password must be at least 8 characters';
            isValid = false;
        }
        
        if (!isValid) {
            e.preventDefault();
            showError(firstError);
            signupForm.classList.add('shake');
            setTimeout(() => signupForm.classList.remove('shake'), 500);
            return;
        }
        
        signupBtn.classList.add('loading');
        signupBtn.disabled = true;
    });

    function showError(message) {
        errorText.textContent = message;
        errorMessage.classList.add('show');
        stackedInputs.classList.add('has-error');
    }

    function hideError() {
        errorMessage.classList.remove('show');
        stackedInputs.classList.remove('has-error');
    }
</script>
