            <!-- Terms -->
            <p class="terms-text">
                By continuing, you agree to our <a href="#">Terms of Service</a> and acknowledge our <a href="#">Privacy Policy</a>.
            </p>

            <!-- Signup Link -->
            <div class="signup-link">
                <p>Don't have an account? <a href="/singup">Sign up</a></p>
            </div>
        </div>
    </div>
</div>

<script>
    const loginForm = document.getElementById('loginForm');
    const usernameInput = document.getElementById('username');
    const passwordInput = document.getElementById('password');
    const passwordToggle = document.getElementById('passwordToggle');
    const loginBtn = document.getElementById('loginBtn');
    const errorMessage = document.getElementById('errorMessage');
    const stackedInputs = document.getElementById('stackedInputs');

    // Password visibility toggle
    passwordToggle.addEventListener('click', function() {
        const type = passwordInput.getAttribute('type');
        
        if (type === 'password') {
            passwordInput.setAttribute('type', 'text');
            this.textContent = 'Hide';
        } else {
            passwordInput.setAttribute('type', 'password');
            this.textContent = 'Show';
        }
        
        passwordInput.focus();
    });

    // Input validation on blur
    usernameInput.addEventListener('blur', function() {
        validateInput(this, 'usernameWrapper');
    });

    passwordInput.addEventListener('blur', function() {
        validateInput(this, 'passwordWrapper');
    });

    // Clear error on input
    usernameInput.addEventListener('input', function() {
        clearError('usernameWrapper');
        hideErrorMessage();
    });

    passwordInput.addEventListener('input', function() {
        clearError('passwordWrapper');
        hideErrorMessage();
    });

    function validateInput(input, wrapperId) {
        const wrapper = document.getElementById(wrapperId);
        
        if (!input.value.trim()) {
            wrapper.classList.add('error');
            wrapper.classList.remove('success');
            return false;
        } else {
            wrapper.classList.remove('error');
            wrapper.classList.add('success');
            return true;
        }
    }

    function clearError(wrapperId) {
        const wrapper = document.getElementById(wrapperId);
        wrapper.classList.remove('error');
    }

    function hideErrorMessage() {
        errorMessage.classList.remove('show');
    }

    function showErrorMessage(message) {
        errorMessage.querySelector('span').textContent = message;
        errorMessage.classList.add('show');
        loginForm.classList.add('shake');
        
        setTimeout(() => {
            loginForm.classList.remove('shake');
        }, 500);
    }

    // Form submission
    loginForm.addEventListener('submit', function(e) {
        let isValid = true;
        
        // Validate username
        if (!usernameInput.value.trim()) {
            document.getElementById('usernameWrapper').classList.add('error');
            isValid = false;
        }
        
        // Validate password
        if (!passwordInput.value.trim()) {
            document.getElementById('passwordWrapper').classList.add('error');
            isValid = false;
        }
        
        if (!isValid) {
            e.preventDefault();
            showErrorMessage('Please fill in all fields');
            return;
        }
        
        // Show loading state
        loginBtn.classList.add('loading');
        loginBtn.disabled = true;
    });

    // Focus animation for stacked inputs
    const inputs = document.querySelectorAll('.stacked-inputs input');
    
    inputs.forEach(input => {
        input.addEventListener('focus', function() {
            stackedInputs.style.borderColor = '#222222';
            stackedInputs.style.boxShadow = '0 0 0 1px #222222';
        });
        
        input.addEventListener('blur', function() {
            const anyFocused = Array.from(inputs).some(i => i === document.activeElement);
            if (!anyFocused) {
                stackedInputs.style.borderColor = '#DDDDDD';
                stackedInputs.style.boxShadow = 'none';
            }
        });
    });

    // Keyboard shortcut - Enter to submit
    document.addEventListener('keydown', function(e) {
        if (e.key === 'Enter' && document.activeElement.tagName !== 'BUTTON') {
            loginBtn.click();
        }
    });
</script>
